
pipeline {
    agent any

    options {
        timeout(time: 30, unit: 'MINUTES')
    }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'rm -rf node_modules; yarn install --frozen-lockfile --cache-folder .yarn'
                }
            }
        }
        stage('Build') {
            when {
                anyOf {
                    changeset "src/App.tsx"
                }
            }
            steps {
                script {
                    sh "yarn turbo run build --scope=@apps/app-1"
                }
            }
        }
    }
}
